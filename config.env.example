# Microcenter settings
PRODUCT_URL=https://www.microcenter.com/product/your-product-url
STORE_COOKIE_NAME=storeSelected
STORE_COOKIE_VALUE=051  # Your store ID

# Email settings (comma-separated list of recipients)
EMAIL_USER=your@gmail.com
EMAIL_PASSWORD=your-app-password  # Gmail App Password
EMAIL_RECIPIENTS=recipient1@email.com,recipient2@email.com

# Pushover settings
PUSHOVER_TOKEN=your-pushover-token
PUSHOVER_USER=your-pushover-user

# Polling interval in seconds
POLL_INTERVAL=5

# Logging
LOG_FILE=/var/log/microcenter/stock_checker.log
LOG_LEVEL=INFO

# Error handling
MAX_RETRIES=3  # Number of consecutive failures before notification

# Service monitoring
HEARTBEAT_HOURS=24  # Send a heartbeat notification every 24 hours 